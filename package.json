{
  "name": "lighthouse-api",
  "version": "1.0.0",
  "description": "API for lighthouse, a web application for habit tracking.",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon ./index",
    "start": "cross-env NODE_ENV=production node ./index",
    "migrations:generate": "sequelize-cli migration:generate --name",
    "migrations:run": "cross-env NODE_ENV=development sequelize-cli db:migrate",
    "migrations:revert": "cross-env NODE_ENV=development sequelize-cli db:migrate:undo",
    "seed:generate": "sequelize-cli seed:generate --name",
    "seed:up": "sequelize-cli db:seed:all",
    "seed:undo": "sequelize-cli db:seed:undo"
  },
  "keywords": [
    "habit",
    "node.js",
    "express.js",
    "javascript"
  ],
  "author": "Edgar Parucho",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.21.0",
    "express-oauth2-jwt-bearer": "^1.6.0",
    "pg": "^8.13.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.4"
  },
  "devDependencies": {
    "dotenv": "^16.4.5",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.7",
    "sequelize-cli": "^6.6.2"
  }
}
